# Yes/No確認
function yes_no {
    MSG=$1
    while :
    do
        echo "anwser y/N: "
        read ans
        case $ans in
        [yY]) return 0 ;;
        [nN]) return 1 ;;
        esac
    done
}

# s3アップ用
function s3 {
    S3_BASE="python ./manage.py do_sync_all"
    S3_TARGET=" --target="
    S3_OPTION=" --run=true"
    S3_DIC="$1"

    echo "s3 up -> ${S3_DIC}"
    URL="${S3_BASE}${S3_TARGET}${S3_DIC}${S3_OPTION}"

    yes_no
    if test 0 -eq $?
    then
        echo "s3 up start -> ${S3_DIC}"
        echo "${URL}"
        ${URL}
    else
        echo "s3 cancel ${S3_DIC}"
    fi
}

# git
function g {
    COMMAND="$1"
    while :
    do
        case $COMMAND in
        r)
            echo "Startting Refrech"
            _git_refresh
            break;;
        e)
            echo "Good Bey"
            break;;
        *)
            echo "Not Found Command"
            echo "r -> Refrech"
            echo "l -> Command List"
            echo "e -> Exit"
            break;;
        esac
    done
}

# 最新のmasterに更新
function _git_refresh {
    git stash
    git checkout master
    git pull origin master
    git submodule update
    git fetch
}

